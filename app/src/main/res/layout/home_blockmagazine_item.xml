<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/magCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/magCoverImg"
            android:layout_width="140dp"
            android:layout_height="190dp"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>
    
    <TextView
        android:id="@+id/magName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/magCover"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textColor="@color/magName_grey"/>

    <TextView
        android:id="@+id/magPubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/magName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:textColor="@color/magPubDate_grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>