<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="toolbarNavigationButtonStyle">@style/Widget.Toolbar.Button.Navigation</item>
    </style>

    <!--修改搜索框提示文字-->
    <style name="Toolbar.MyStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="minHeight">29dp</item>
        <item name="minWidth">21dp</item>
    </style>

    <style name="Widget.SearchView" parent="Widget.AppCompat.SearchView">
        <!--修改搜索框提示文字-->
        <item name="defaultQueryHint">@string/search_default_hint</item>
        <!--修改搜索框左边的搜索按钮图标-->
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
    </style>

</resources>